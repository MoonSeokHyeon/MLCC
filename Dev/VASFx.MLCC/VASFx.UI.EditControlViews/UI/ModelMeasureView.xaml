            <Border Grid.Row="2" Margin="2" VerticalAlignment="Stretch" BorderBrush="{DynamicResource PrimaryHueDarkBrush}" BorderThickness="1" CornerRadius="3" Background="#FFF0F0F0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition  Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="{DynamicResource PrimaryHueMidBrush}" CornerRadius="3">
                        <TextBlock Style="{StaticResource MaterialDesignSubtitle1TextBlock}" FontFamily="Consolas" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Align Offset" Grid.Row="1" Foreground="White"/>
                    </Border>

                    <Grid Grid.Row="1">
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.ColumnSpan="3">
            <StackPanel HorizontalAlignment="Right" Margin="0 0 10 0">
                <Button Margin="5" HorizontalAlignment="Stretch" Height="50" Width="200" Command="{Binding CloseDialogCommand}" CommandParameter="Manual">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Close" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
