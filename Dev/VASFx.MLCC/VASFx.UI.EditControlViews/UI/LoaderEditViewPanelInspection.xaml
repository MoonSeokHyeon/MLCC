<UserControl x:Class="VASFx.UI.EditControlViews.UI.LoaderEditViewPanelInspection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VASFx.UI.EditControlViews.UI"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500">
    <Grid>
        <GroupBox Background="White" Header="Panel Inspection" BorderBrush="White" FontWeight="Bold" Margin="10">
            <Grid>
                <TabControl Grid.Row="1" SelectedIndex="{Binding TabChange}"  TabStripPlacement="Top">
                    <TabItem Header="Present">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="1.8*"/>

                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.25*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsPresent}"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Label Content="Enable" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1.5*"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="0.5*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                                <Label Content="Number" FontSize="13"/>
                                                <Label Content="Pocket" FontSize="13"/>
                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PresentNumberValue}" TextAlignment="Center" FontSize="13"/>
                                        </Grid>

                                        <Grid Grid.Column="2">
                                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                                <Button Height="10" Width="25" Command="{Binding PresentNumber}" CommandParameter="Up">
                                                    <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                                </Button>
                                                <Button Height="10" Width="25" Command="{Binding PresentNumber}" CommandParameter="Down">
                                                    <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.2*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Label Content="Find Type" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <ComboBox  FontSize="13" SelectedItem="{Binding FindTypeSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                            <ComboBoxItem IsSelected="True" Content="Histogram"/>
                                            <ComboBoxItem IsSelected="false" Content="???"/>
                                            <ComboBoxItem IsSelected="false" Content="???"/>
                                            <ComboBoxItem IsSelected="false" Content="???"/>
                                        </ComboBox>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                     
                                    </Grid>

                                    <Grid Grid.Column="3">

                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Content="Search" FontSize="13"/>
                                            <Label Content="Region" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <ComboBox  FontSize="13" SelectedItem="{Binding PresentRegionSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                            <ComboBoxItem IsSelected="True" Content="Region1"/>
                                            <ComboBoxItem IsSelected="false" Content="Region2"/>
                                            <ComboBoxItem IsSelected="false" Content="Region3"/>
                                            <ComboBoxItem IsSelected="false" Content="Region4"/>
                                        </ComboBox>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PresentSearchRegion}">
                                            <materialDesign:PackIcon Kind="VectorSquare" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="3">

                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsPanelHist}"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Label Content="Panel Hist" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsResultGraphic}"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Label Content="Results Graphic" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsReturnResults}"/>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <Label Content="Return Results" FontSize="13" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>

                                </Grid>
                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>

                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Mean" FontSize="13"/>
                                            <Label Content="Thresh" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PresentMeanValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PresentMean}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PresentMean}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Count" FontSize="13"/>
                                            <Label Content="Thresh" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PresentCountValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PresentCount}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PresentCount}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="First" FontSize="13"/>
                                            <Label Content="Bin" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PresentFirstValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PresentFirst}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PresentFirst}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Last" FontSize="13"/>
                                            <Label Content="Bin" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PresentLastValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PresentLast}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PresentLast}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>


                            </Grid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Over Pocket">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.1*"/>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="{Binding IsOverPocket}"/>
                                    </Grid>

                                    <Grid Grid.Column="1">

                                        <Label Content="Enable" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel>
                                            <Label Content="Use Pattern Patmax" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            <ComboBox  FontSize="13" SelectedItem="{Binding PatmaxSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                                <ComboBoxItem IsSelected="True" Content="Use one pattern for one region"/>
                                                <ComboBoxItem IsSelected="false" Content="Use one pattern for all region"/>
                                            </ComboBox>
                                        </StackPanel>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Content="Search" FontSize="13"/>
                                            <Label Content="Region" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PocketSearchRegion}">
                                            <materialDesign:PackIcon Kind="VectorSquare" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Content="Move" FontSize="13"/>
                                            <Label Content="Origin" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="3">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PocketOrigin}">
                                            <materialDesign:PackIcon Kind="Target" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Label Content="Train" FontSize="13"/>
                                            <Label Content="Region" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PocketTrainRegion}">
                                            <materialDesign:PackIcon Kind="BorderOutside" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="3">
                                        <Button Content="Reset" Command="{Binding PocketReset}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="80" Height="20" FontSize="10"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Label Content="Train" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PocketTrain}">
                                            <materialDesign:PackIcon Kind="TargetVariant" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>

                                    <Grid Grid.Column="2">

                                    </Grid>

                                    <Grid Grid.Column="3">
                                        <Button Content="All" Command="{Binding PocketTrainCurrentAll}" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="80" Height="20" FontSize="10"/>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.7*"/>
                                        <ColumnDefinition Width="0.8*"/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel Orientation="Vertical">
                                            <Label Content="Region" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            <ComboBox  FontSize="13" SelectedItem="{Binding RegionSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                                <ComboBoxItem IsSelected="True" Content="Region1"/>
                                                <ComboBoxItem IsSelected="false" Content="Region2"/>
                                                <ComboBoxItem IsSelected="false" Content="Region3"/>
                                                <ComboBoxItem IsSelected="false" Content="Region4"/>
                                                <ComboBoxItem IsSelected="false" Content="Region5"/>
                                                <ComboBoxItem IsSelected="false" Content="Region6"/>
                                                <ComboBoxItem IsSelected="false" Content="Region7"/>
                                                <ComboBoxItem IsSelected="false" Content="Region8"/>
                                            </ComboBox>
                                        </StackPanel>

                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Train Current" FontSize="13"/>
                                            <Label Content="Golden Pose" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <Button VerticalAlignment="Center" HorizontalAlignment="Center" Width="60" Height="50" Command="{Binding PocketTrainCurrent}">
                                            <materialDesign:PackIcon Kind="CrosshairsGps" VerticalAlignment="Center" HorizontalAlignment="Center" Width="30" Height="30"/>
                                        </Button>
                                    </Grid>
                                </Grid>


                            </Grid>

                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>

                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">

                                    <StackPanel Margin="20,0,0,0">
                                        <Label Content="Check Shift Type" FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                        <ComboBox  FontSize="13" SelectedItem="{Binding ShiftSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                            <ComboBoxItem IsSelected="True" Content="Find Patmax"/>

                                        </ComboBox>
                                    </StackPanel>

                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Contrast" FontSize="13"/>
                                            <Label Content="Threshold" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PocketContrastValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PocketContrast}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PocketContrast}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Angle" FontSize="13"/>
                                            <Label Content="Range" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PocketAngleValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PocketAngle}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PocketAngle}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Score" FontSize="13"/>
                                            <Label Content="Threshold" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PocketScoreValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PocketScore}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PocketScore}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="0.5*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                            <Label Content="Show" FontSize="13"/>
                                            <Label Content="Graphic" FontSize="13"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <TextBox Width="50" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding PocketGraphicValue}" TextAlignment="Center" FontSize="13"/>
                                    </Grid>

                                    <Grid Grid.Column="2">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left">
                                            <Button Height="10" Width="25" Command="{Binding PocketGraphic}" CommandParameter="Up">
                                                <materialDesign:PackIcon Kind="MenuUp" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                            <Button Height="10" Width="25" Command="{Binding PocketGraphic}" CommandParameter="Down">
                                                <materialDesign:PackIcon Kind="MenuDown" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="-7,0,0,0" Height="10" Width="105"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </Grid>


                            </Grid>

                        </Grid>

                    </TabItem>
                    <TabItem Header="Over Pocket Params">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="0">
                                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Label Content="Panel Region" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <ComboBox  FontSize="13" SelectedItem="{Binding PanelRegionSelected}" materialDesign:ComboBoxAssist.ClassicMode="{Binding ElementName=ClassicModeCheckBox, Path=IsChecked}" VerticalAlignment="Center" Foreground="Black" Background="WhiteSmoke">
                                        <ComboBoxItem IsSelected="True" Content="Region1"/>
                                        <ComboBoxItem IsSelected="false" Content="Region2"/>
                                        <ComboBoxItem IsSelected="false" Content="Region3"/>
                                        <ComboBoxItem IsSelected="false" Content="Region4"/>
                                    </ComboBox>
